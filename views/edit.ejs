<%- include("partials/header"); -%>

  <h1>Edit</h1>
  <form class="" action="/posts/<%= id %>/edit" method="post" autocomplete="off">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="postTitle" value=<%= title %>>
      <label>Post</label>
      <textarea class="form-control" name="postBody" rows="5" cols="30"><%= content %></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

<%- include("partials/footer"); -%>
